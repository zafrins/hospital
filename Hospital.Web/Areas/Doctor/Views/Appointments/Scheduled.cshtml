@model IEnumerable<Hospital.ViewModels.DoctorAppointmentViewModel>

<h2>My Appointments</h2>

<table class="table">
    <thead>
        <tr>
            <th>Patient</th>
            <th>Email</th>
            <th>Date</th>
            <th>Description</th>
            <th>Type</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var appt in Model)
        {
            <tr>
                <td>@appt.PatientName</td>
                <td>@appt.PatientEmail</td>
                <td>@appt.AppointmentDate.ToString("g")</td>
                <td>@appt.Description</td>
                <td>@appt.Type</td>
                <td>@appt.Status</td>
                <td>
                    @if (appt.Status == "Pending")
                    {
                        <form asp-area="Doctor" asp-controller="Appointments" asp-action="Confirm" method="post">
                            <input type="hidden" name="id" value="@appt.AppointmentId" />
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success btn-sm">Confirm</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>