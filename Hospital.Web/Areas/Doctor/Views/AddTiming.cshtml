@using Hospital.Models
@model Hospital.ViewModels.TimingViewModel  

<form asp-action="addtiming">  

    <div class="form-group">  
        <label asp-for="DoctorId" class="control-label"></label>  
        <input asp-for="DoctorId" class="form-control" />  
        <span asp-validation-for="DoctorId" class="text-danger"></span>  
    </div>  

    <div class="form-floating mb-3">  
        <input asp-for="Date" class="form-control" aria-required="true" />  
        <label asp-for="Date"></label>  
        <span asp-validation-for="Date" class="text-danger"></span>  
    </div>  

    <div class="form-group mb-3">  
        <label asp-for="Status" class="control-label"></label>  
        <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control"></select>  
        <span asp-validation-for="Status" class="text-danger"></span>  
    </div>  

    <div class="form-group mb-3">  
        <label>Morning Shift</label>  
        <div class="d-flex gap-2">  
            <select asp-for="MorningShiftStartTime" asp-items="ViewBag.morningStart" class="form-control"></select>  
            <select asp-for="MorningShiftEndTime" asp-items="ViewBag.morningEnd" class="form-control"></select>  
        </div>  
    </div>  

    <div class="form-group mb-3">  
        <label>Afternoon Shift</label>  
        <div class="d-flex gap-2">  
            <select asp-for="AfternoonShiftStartTime" asp-items="ViewBag.evenStart" class="form-control"></select>  
            <select asp-for="AfternoonShiftEndTime" asp-items="ViewBag.evenEnd" class="form-control"></select>  
        </div>  
    </div>  

    <div class="form-group">  
        <input type="submit" value="Submit" class="btn btn-primary" />  
    </div>  
</form>
