@page
@using Hospital.Models
@model DoctorRegisterModel
@{
    ViewData["Title"] = "Doctor Register";
}

<div class="register-container d-flex justify-content-center align-items-center min-vh-100">
    <div class="register-card">
        <!-- Left side image -->
        <div class="register-image"></div>

        <!-- Right side form -->
        <div class="register-form">
            <h2>Doctor Registration</h2>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-3">
                    <!-- Name -->
                    <div class="col-md-6 form-floating">
                        <input asp-for="Input.Name" class="form-control" />
                        <label asp-for="Input.Name">Full Name</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <!-- Gender -->
                    <div class="col-md-6 form-floating">
                        @{
                            var genderList = Html.GetEnumSelectList<Gender>().ToList();
                            genderList.Insert(0, new SelectListItem { Text = "Select Gender", Value = "" });
                        }
                        <select asp-for="Input.Gender" asp-items="genderList" class="form-select"></select>
                        <label asp-for="Input.Gender">Gender</label>
                        <span asp-validation-for="Input.Gender" class="text-danger"></span>
                    </div>

                    <!-- Date of Birth -->
                    <div class="col-md-6 form-floating">
                        <input asp-for="Input.DOB" type="date" class="form-control" />
                        <label asp-for="Input.DOB">Date of Birth</label>
                        <span asp-validation-for="Input.DOB" class="text-danger"></span>
                    </div>

                    <!-- Nationality -->
                    <div class="col-md-6 form-floating">
                        <input asp-for="Input.Nationality" class="form-control" />
                        <label asp-for="Input.Nationality">Nationality</label>
                        <span asp-validation-for="Input.Nationality" class="text-danger"></span>
                    </div>

                    <!-- Address -->
                    <div class="col-md-12 form-floating">
                        <input asp-for="Input.Address" class="form-control" />
                        <label asp-for="Input.Address">Address</label>
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>

                    <!-- Specialist -->
                    <div class="col-md-12 form-floating">
                        <input asp-for="Input.Specialist" class="form-control" />
                        <label asp-for="Input.Specialist">Specialist</label>
                        <span asp-validation-for="Input.Specialist" class="text-danger"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6 form-floating">
                        <input asp-for="Input.Email" type="email" class="form-control" autocomplete="username" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!-- Picture URL -->
                    <div class="col-md-6 form-floating">
                        <input asp-for="Input.PictureUrl" class="form-control" />
                        <label asp-for="Input.PictureUrl">Profile Picture URL</label>
                        <span asp-validation-for="Input.PictureUrl" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="col-md-6 form-floating">
                        <input asp-for="Input.Password" type="password" class="form-control" autocomplete="new-password" />
                        <label asp-for="Input.Password">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div class="col-md-6 form-floating">
                        <input asp-for="Input.ConfirmPassword" type="password" class="form-control" autocomplete="new-password" />
                        <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <!-- IsDoctor checkbox -->
                <div class="form-check mt-4">
                    <input type="checkbox" asp-for="Input.IsDoctor" class="form-check-input" />
                    <label asp-for="Input.IsDoctor" class="form-check-label">I am a doctor</label>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn mt-4">Register</button>
            </form>

            <div class="text-center mt-3">
                <small>Already have an account? <a asp-page="./Login">Login</a></small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
