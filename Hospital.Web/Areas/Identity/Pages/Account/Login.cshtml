@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="login-container d-flex justify-content-center align-items-center min-vh-100">
    <div class="login-card p-4">
        <h2 class="text-center mb-4">Log in to your account</h2>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Email -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" type="password" autocomplete="current-password" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Remember Me -->
            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">Remember Me</label>
            </div>

            <button id="login-submit" type="submit" class="w-100 btn btn-login">Log in</button>

            <div class="mt-3 text-center">
                <p><a asp-page="./ForgotPassword">Forgot your password?</a></p>
                <p><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a></p>
                <p><a asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #e0f7fa, #ffffff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .login-card {
        max-width: 400px;
        width: 100%;
        background: #ffffff;
        border-radius: 12px;
        padding: 40px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.25);
        }

        .login-card h2 {
            font-weight: 700;
            color: #00796b;
        }

    .form-floating input {
        height: 50px;
        font-size: 1rem;
    }

    .btn-login {
        background: linear-gradient(135deg, #1f7a8c, #3fb0ac);
        color: #fff;
        font-weight: 600;
        padding: 0.75rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-login:hover {
            background: linear-gradient(135deg, #3fb0ac, #1f7a8c);
            transform: translateY(-2px) scale(1.02);
            box-shadow: 0 10px 20px rgba(31,122,140,0.35);
        }

    .form-check-label {
        font-weight: 500;
    }

    .text-center a {
        color: #00796b;
        text-decoration: none;
    }

        .text-center a:hover {
            text-decoration: underline;
        }

    @@media (max-width: 500px) {
        .login-card

    {
        padding: 30px 20px;
    }

    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
