@model Hospitals.Utilities.PagedResult<Hospital.ViewModels.RoomViewModel>

@{
    ViewData["Title"] = "Rooms List";
}

<h2>Rooms List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Room Number</th>
            <th>Type</th>
            <th>Status</th>
            <th>Hospital</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model.Data)
        {
            <tr>
                <td>@room.RoomNumber</td>
                <td>@room.Type</td>
                <td>@room.Status</td>
                <td>@room.HospitalInfo?.Name</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <p>Page @Model.PageNumber of @((Model.TotalItems + Model.PageSize - 1) / Model.PageSize)</p>
</div>
