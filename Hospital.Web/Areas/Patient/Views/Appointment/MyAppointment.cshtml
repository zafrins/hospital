@model List<AppointmentViewModel>

<h2>My Appointments</h2>

@if (!Model.Any())
{
    <p>No appointments found.</p>
}
else
{

    <table class="table">
        <thead>
            <tr>
                <th>Doctor</th>
                <th>Email</th>
                <th>Date</th>
                <th>Description</th>
                <th>Type</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var appt in Model)
            {
                <tr>
                    <td>@appt.DoctorName</td>
                    <td>@appt.DoctorEmail</td>
                    <td>@appt.AppointmentDate.ToString("g")</td>
                    <td>@appt.Description</td>
                    <td>@appt.Type</td>
                    <td>@appt.Status</td>
                </tr>
            }
        </tbody>
    </table>

}
