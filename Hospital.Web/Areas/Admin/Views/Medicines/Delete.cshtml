@model Hospital.ViewModels.MedicineViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5 delete-container">
    <h1 class="page-title mb-4">Delete Medicine</h1>

    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this medicine?</h4>
    </div>

    <div class="medicine-details mb-4 p-3 shadow-sm rounded bg-white">
        <dl class="row mb-0">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Type</dt>
            <dd class="col-sm-9">@Model.Type</dd>

            <dt class="col-sm-3">Cost</dt>
            <dd class="col-sm-9">$@Model.Cost</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">@Model.Stock</dd>

            <dt class="col-sm-3">Expiry Date</dt>
            <dd class="col-sm-9">@Model.ExpiryDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Manufacturer</dt>
            <dd class="col-sm-9">@Model.Manufacturer</dd>

            <dt class="col-sm-3">Image</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-width:150px;" />
                }
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" class="d-flex gap-2">
        <input type="submit" value="Delete" class="btn btn-danger btn-lg" />
        <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
    </form>
</div>

<style>
    .delete-container {
        font-family: 'Poppins', sans-serif;
    }

    .page-title {
        font-weight: 700;
        color: #0d4f5f;
    }

    .alert-warning {
        background: #fff3cd;
        color: #856404;
        border-radius: 0.5rem;
        padding: 1rem 1.25rem;
    }

    .medicine-details dt {
        font-weight: 600;
        color: #0d4f5f;
    }

    .medicine-details dd {
        margin-bottom: 0.75rem;
    }

    .btn-danger {
        background: linear-gradient(135deg, #c62828, #ef5350);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            transform: scale(1.05);
        }

    .btn-secondary {
        background: #6c757d;
        color: #fff;
        border: none;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background: #5a6268;
            transform: scale(1.05);
        }
</style>
