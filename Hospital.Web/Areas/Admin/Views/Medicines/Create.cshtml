@model Hospital.ViewModels.MedicineViewModel

@{
    ViewData["Title"] = "Create Medicine";
}

<div class="medicine-create-wrapper">
    <h2 class="page-title">Add New Medicine</h2>

    <div class="form-card">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Type"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cost"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ExpiryDate"></label>
                <input asp-for="ExpiryDate" type="date" class="form-control" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Manufacturer"></label>
                <input asp-for="Manufacturer" class="form-control" />
                <span asp-validation-for="Manufacturer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile">Upload Image</label>
                <input asp-for="ImageFile" type="file" class="form-control" />
            </div>

            <div class="form-actions">
                <input type="submit" value="Create" class="btn btn-create" />
                <a asp-action="Index" class="btn btn-back">Back to List</a>
            </div>
        </form>
    </div>
</div>

<style>
    .medicine-create-wrapper {
        max-width: 600px;
        margin: 3rem auto;
        font-family: 'Poppins', sans-serif;
    }

    .page-title {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        color: #0d4f5f;
        margin-bottom: 2rem;
    }

    .form-card {
        background: #fff;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 12px 35px rgba(0,0,0,0.1);
        transition: all 0.3s;
    }

        .form-card:hover {
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

    .form-group {
        margin-bottom: 1.25rem;
    }

        .form-group label {
            font-weight: 600;
            color: #0d4f5f;
            display: block;
            margin-bottom: 0.3rem;
        }

    .form-control {
        width: 100%;
        padding: 0.5rem 0.75rem;
        border-radius: 10px;
        border: 1px solid #ccc;
        outline: none;
        transition: all 0.2s;
    }

        .form-control:focus {
            border-color: #0d4f5f;
            box-shadow: 0 0 5px rgba(13,79,95,0.3);
        }

    .form-actions {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
        justify-content: flex-end;
        flex-wrap: wrap;
    }

    .btn-create {
        background: linear-gradient(90deg, #0d4f5f, #38a3a5);
        color: #fff;
        border: none;
        padding: 0.6rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-create:hover {
            background: linear-gradient(90deg, #38a3a5, #0d4f5f);
        }

    .btn-back {
        background: #6c757d;
        color: #fff;
        padding: 0.6rem 1.5rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        text-align: center;
    }

        .btn-back:hover {
            background: #5a6268;
        }

    .text-danger {
        font-size: 0.875rem;
        margin-top: 0.2rem;
    }

    @@media (max-width: 576px) {
        .form-actions

    {
        flex-direction: column;
        gap: 0.75rem;
    }

    .btn-create, .btn-back {
        width: 100%;
        text-align: center;
    }

    }
</style>
