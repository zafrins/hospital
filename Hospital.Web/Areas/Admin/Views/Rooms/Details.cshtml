@model Hospital.ViewModels.RoomViewModel

@{
    ViewData["Title"] = "Room Details";
}

<div class="container my-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-success fw-bold">Room Details</h1>
        <a asp-action="Index" class="btn btn-outline-primary btn-lg shadow-sm">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Rooms
        </a>
    </div>

    <!-- Card -->
    <div class="card shadow-sm border-success border-2">
        <div class="card-body">
            <h5 class="card-title fw-bold mb-3">Room Information</h5>

            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold">Room Number</dt>
                <dd class="col-sm-9">@Model.RoomNumber</dd>

                <dt class="col-sm-3 fw-bold">Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3 fw-bold">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3 fw-bold">Hospital</dt>
                <dd class="col-sm-9">@Model.HospitalInfo?.Name</dd>

            </dl>

            <div class="d-flex gap-3">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-gradient-green btn-lg shadow-sm flex-fill text-center">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm flex-fill text-center">
                    Back
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .btn-gradient-green {
        border: none;
        border-radius: 12px;
        font-weight: 600;
        background: linear-gradient(90deg, #28a745, #20c997);
        color: #fff;
        padding: 0.65rem 1.4rem;
        transition: all 0.25s ease;
    }

        .btn-gradient-green:hover {
            transform: translateY(-2px);
            background: linear-gradient(90deg, #20c997, #28a745);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }
</style>
