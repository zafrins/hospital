        border: 2px solid #3fb0ac;
        padding: 0.5rem;
        animation: dropdownFade 0.3s ease;
    }

    @@keyframes dropdownFade {
        from

    {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .dropdown-item {
        font-weight: 500;
        color: #fff;
        padding: 0.7rem 1rem;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

        .dropdown-item:hover {
