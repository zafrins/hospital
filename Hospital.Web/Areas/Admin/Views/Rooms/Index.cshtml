@using Hospitals.Utilities
@model PagedResult<Hospital.ViewModels.RoomViewModel>

@{
    ViewData["Title"] = "Rooms Dashboard";
}

<div class="container my-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h1 class="rooms-title">Rooms Dashboard</h1>
        <a asp-action="Create" class="btn btn-gradient-teal btn-lg shadow-btn mt-2 mt-md-0">
            <i class="bi bi-plus-circle me-2"></i> Add New Room
        </a>
    </div>

    <!-- Card Grid -->
    <div class="row g-4">
        @foreach (var item in Model.Data)
        {
            <div class="col-md-6 col-lg-4">
                <div class="room-card h-100 position-relative">

                    <!-- Serial number badge -->
                    <span class="serial-badge">
                        @item.Id
                    </span>

                    <div class="card-body pt-5">
                        <h5 class="card-title">Room @item.RoomNumber</h5>
                        <h6 class="card-subtitle">@item.Type</h6>
                        <p class="card-text"><strong>Status:</strong> @item.Status</p>
                        <p class="card-text mb-3"><strong>Hospital:</strong> @item.HospitalInfo.Name</p>

                        <!-- Action buttons -->
                        <div class="d-flex justify-content-between mt-3 gap-2 flex-wrap">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-icon edit flex-fill">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-icon info flex-fill">
                                <i class="bi bi-eye me-1"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-icon delete flex-fill">
                                <i class="bi bi-trash me-1"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pager -->
    <div class="mt-5 d-flex justify-content-center">
        <cs-pager cs-paging-pagesize="@Model.PageSize"
                  cs-paging-pagenumber="@Model.PageNumber"
                  cs-paging-totalitems="@Model.TotalItems"
                  cs-pagenumber-param="pageNumber"
                  asp-controller="Rooms"
                  asp-action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        </cs-pager>
    </div>
</div>

<style>
    /* ================= HEADER ================= */
    .rooms-title {
        font-size: 2.4rem;
        font-weight: 800;
        color: #008080; /* Teal */
        position: relative;
        letter-spacing: 0.5px;
    }

        .rooms-title::after {
            content: "";
            position: absolute;
            bottom: -6px;
            left: 0;
            width: 70px;
            height: 4px;
            background: #20c997; /* Teal gradient accent */
            border-radius: 3px;
        }

    /* ================= ADD NEW ROOM BUTTON ================= */
    .btn-gradient-teal {
        border: none;
        border-radius: 12px;
        font-weight: 600;
        background: linear-gradient(90deg, #008080, #20c997);
        color: #fff;
        padding: 0.65rem 1.4rem;
        transition: all 0.25s ease;
    }

        .btn-gradient-teal:hover {
            transform: translateY(-2px);
            background: linear-gradient(90deg, #20c997, #008080);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

    /* ================= ROOM CARD ================= */
    .room-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 1rem;
        border: 1px solid rgba(0, 128, 128, 0.15);
        backdrop-filter: blur(6px);
        box-shadow: 0 6px 15px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .room-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 14px 30px rgba(0,0,0,0.12);
        }

    /* ================= SERIAL BADGE ================= */
    .serial-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: #008080;
        color: #fff;
        padding: 0.45rem 0.8rem;
        font-weight: 600;
        border-radius: 8px;
        font-size: 0.85rem;
    }

    /* ================= CARD CONTENT ================= */
    .card-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #008080;
        margin-bottom: 0.5rem;
        font-family: 'Poppins', sans-serif;
    }

    .card-subtitle {
        font-size: 1rem;
        color: #6c757d;
        margin-bottom: 0.75rem;
    }

    .card-text {
        font-size: 0.95rem;
        color: #333;
        margin-bottom: 0.4rem;
    }

    /* ================= ACTION BUTTONS ================= */
    .btn-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px;
        padding: 0.45rem 0.9rem;
        font-size: 0.9rem;
        font-weight: 600;
        transition: all 0.25s ease;
        border: none;
    }

        .btn-icon.edit {
            background: #e0f7f7;
            color: #008080;
        }

            .btn-icon.edit:hover {
                background: #008080;
                color: #fff;
            }

        .btn-icon.info {
            background: #e0f9f9;
            color: #20c997;
        }

            .btn-icon.info:hover {
                background: #20c997;
                color: #fff;
            }

        .btn-icon.delete {
            background: #fdeaea;
            color: #dc3545;
        }

            .btn-icon.delete:hover {
                background: #dc3545;
                color: #fff;
            }

    /* ================= PAGER ================= */
    .page-link {
        border-radius: 6px !important;
        margin: 0 4px;
        color: #008080 !important;
        font-weight: 500;
        border: 1px solid #dee2e6 !important;
        transition: all 0.2s ease;
    }

        .page-link:hover {
            background: #e0f7f7;
            border-color: #008080 !important;
        }

    .page-item.active .page-link {
        background: #008080 !important;
        border-color: #008080 !important;
        color: #fff !important;
    }

    /* ================= RESPONSIVE ================= */
    @@media (max-width: 576px) {
        .d-flex.justify-content-between.flex-wrap

    {
        flex-direction: column;
        gap: 1rem;
    }

    }
</style>
