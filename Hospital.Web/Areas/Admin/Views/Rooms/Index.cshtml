            content: "";
            position: absolute;
            left: 50%;
            bottom: 0;
            width: 0;
            height: 3px;
            background: #ffcc70;
            transition: all 0.3s ease;
            transform: translateX(-50%);
        }

        .nav-link:hover::after {
            width: 60%;
        }

        .nav-link:hover {
            color: #fff !important;
            transform: translateY(-3px);
        }

    /* DROPDOWN MENU */
