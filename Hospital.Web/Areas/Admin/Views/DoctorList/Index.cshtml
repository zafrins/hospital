@using Hospitals.Utilities
@model PagedResult<Hospital.ViewModels.ApplicationUserViewModel>

@{
    ViewData["Title"] = "Doctors Dashboard";
}

<div class="container my-5">
    <h1 class="mb-4">Doctors Dashboard</h1>

    <div class="row g-4">
        @foreach (var doctor in Model.Data)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm p-3 rounded">
                    <h5 class="card-title">@doctor.Name</h5>
                    <p class="card-text"><strong>Email:</strong> @doctor.Email</p>
                   
                    <p class="card-text"><strong>Specialty:</strong> @doctor.Specialist</p>

                    <div class="d-flex justify-content-between mt-3">
                        <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@doctor.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        <a asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card-title {
        font-weight: 700;
        color: #0d6efd;
    }

    .card-text {
        font-size: 0.95rem;
        color: #333;
    }

    .btn {
        font-size: 0.85rem;
    }

        .btn i {
            margin-right: 3px;
        }
</style>
