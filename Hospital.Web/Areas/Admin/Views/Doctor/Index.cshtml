@model Hospitals.Utilities.PagedResult<Hospital.ViewModels.TimingViewModel>

@{
    ViewData["Title"] = "Doctor Timing";
}

<h1>Doctor Timing</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Add Timing</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Doctor</th>
            <th>Date</th>
            <th>Morning Shift</th>
            <th>Afternoon Shift</th>
            <th>Duration</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.Doctor.Name</td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.MorningShiftStartTime - @item.MorningShiftEndTime</td>
                <td>@item.AfternoonShiftStartTime - @item.AfternoonShiftEndTime</td>
                <td>@item.Duration min</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
