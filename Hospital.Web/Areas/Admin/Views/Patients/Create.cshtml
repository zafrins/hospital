@model Hospital.ViewModels.ApplicationUserViewModel

@{
    ViewData["Title"] = "Create Patient";
}

<div class="container my-5">

    <!-- Header -->
   @*  <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-success fw-bold">Create Patient</h1>
        <a asp-action="Index" class="btn btn-outline-success btn-lg shadow-sm">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Patients
        </a>
    </div> *@

    <div class="row justify-content-start">
        <div class="col-md-5">
            <div class="card shadow-sm border-success border-2">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control shadow-sm" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control shadow-sm" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label fw-bold"></label>
                            <input asp-for="UserName" class="form-control shadow-sm" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="City" class="form-label fw-bold"></label>
                            <input asp-for="City" class="form-control shadow-sm" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Gender" class="form-label fw-bold"></label>
                            <input asp-for="Gender" class="form-control shadow-sm" />
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <input type="submit" value="Create" class="btn btn-gradient-green btn-lg shadow-sm" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Card styling */
    .card {
        border-radius: 1rem;
    }

    /* Form input shadows */
    .form-control {
        border-radius: 0.5rem;
        border: 1px solid #ced4da;
        transition: all 0.25s ease;
    }

        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 5px rgba(40, 167, 69, 0.3);
            outline: none;
        }

    /* Gradient Create button */
    .btn-gradient-green {
        border: none;
        border-radius: 50px;
        font-weight: 500;
        background: linear-gradient(90deg, #28a745, #20c997);
        color: #fff;
        transition: transform 0.15s, box-shadow 0.2s;
    }

        .btn-gradient-green:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

    /* Back button hover */
    .btn-outline-success:hover {
        background-color: #28a745;
        color: #fff;
        box-shadow: 0 4px 8px rgba(0,128,0,0.2);
    }
</style>
