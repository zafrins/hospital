@model Hospital.ViewModels.ApplicationUserViewModel

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container my-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-danger fw-bold">Delete Patient</h1>
        <a asp-action="Index" class="btn btn-outline-success btn-lg shadow-sm">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to Patients
        </a>
    </div>

    <!-- Confirmation Card -->
    <div class="card shadow-sm border-danger border-2">
        <div class="card-body">
            <h5 class="card-title text-danger fw-bold mb-3">Are you sure you want to delete this patient?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-3 fw-bold">Id</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Id)</dd>

                <dt class="col-sm-3 fw-bold">Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 fw-bold">User Name</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UserName)</dd>

                <dt class="col-sm-3 fw-bold">City</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.City)</dd>

                <dt class="col-sm-3 fw-bold">Gender</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Gender)</dd>
            </dl>

            <div class="d-flex gap-3">
                <form asp-action="Delete" method="post" class="flex-fill">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-gradient-red btn-lg shadow-sm w-100" />
                </form>

                <a asp-action="Index" class="btn btn-outline-success btn-lg shadow-sm flex-fill text-center">
                    Cancel
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Card styling */
    .card {
        border-radius: 1rem;
    }

    /* Gradient Delete button */
    .btn-gradient-red {
        border: none;
        border-radius: 50px;
        font-weight: 500;
        background: linear-gradient(90deg, #dc3545, #e4606d);
        color: #fff;
        transition: transform 0.15s, box-shadow 0.2s;
    }

        .btn-gradient-red:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

    .btn-outline-success:hover {
        background-color: #28a745;
        color: #fff;
        box-shadow: 0 4px 8px rgba(0,128,0,0.2);
    }

    dt {
        font-weight: 600;
    }
</style>
