@using Hospitals.Utilities
@model PagedResult<Hospital.ViewModels.ApplicationUserViewModel>

@{
    ViewData["Title"] = "Patients Dashboard";
}

<div class="container my-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h1 class="patients-title">Patients Dashboard</h1>
        <a asp-action="Create" class="btn btn-gradient-teal-green btn-lg shadow-btn mt-2 mt-md-0">
            <i class="bi bi-plus-circle me-2"></i> Add New Patient
        </a>
    </div>

    <!-- Card Grid -->
    <div class="row g-4">
        @foreach (var patient in Model.Data)
        {
            <div class="col-md-6 col-lg-4">
                <div class="patient-card h-100 position-relative">

                    <!-- Serial number badge -->
                    <span class="serial-badge">@patient.Id</span>

                    <div class="card-body pt-5">
                        <h5 class="card-title">@patient.Name</h5>
                        <p class="card-text"><strong>Email:</strong> @patient.Email</p>
                        <p class="card-text"><strong>Address:</strong> @patient.Address</p>
                        <p class="card-text"><strong>Gender:</strong> @patient.Gender</p>

                        <!-- Action buttons -->
                        <div class="d-flex justify-content-between mt-3 gap-2 flex-wrap">
                            <a asp-action="Details" asp-route-id="@patient.Id" class="btn-icon btn-teal-green flex-fill">
                                <i class="bi bi-info-circle me-1"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@patient.Id" class="btn-icon btn-delete flex-fill">
                                <i class="bi bi-trash me-1"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pager -->
    <div class="mt-5 d-flex justify-content-center">
        <cs-pager cs-paging-pagesize="@Model.PageSize"
                  cs-paging-pagenumber="@Model.PageNumber"
                  cs-paging-totalitems="@Model.TotalItems"
                  cs-pagenumber-param="pageNumber"
                  asp-controller="Patients"
                  asp-action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        </cs-pager>
    </div>
</div>

<style>
    /* Page Title */
    .patients-title {
        font-size: 2.6rem;
        font-weight: 800;
        color: #198754;
        position: relative;
        letter-spacing: 0.5px;
        flex: 1 1 100%;
        margin-bottom: 1rem;
    }

        .patients-title::after {
            content: "";
            position: absolute;
            bottom: -6px;
            left: 0;
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #20c997, #198754);
            border-radius: 3px;
        }

    /* Gradient Add Button */
    .btn-gradient-teal-green {
        border: none;
        border-radius: 12px;
        font-weight: 600;
        background: linear-gradient(90deg, #20c997, #198754);
        color: #fff;
        padding: 0.65rem 1.6rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }

        .btn-gradient-teal-green:hover {
            background: linear-gradient(90deg, #198754, #20c997);
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(0,0,0,0.2);
        }

    /* Patient Card */
    .patient-card {
        background: rgba(255,255,255,0.9);
        border-radius: 1.5rem;
        border: 1px solid rgba(32, 201, 151, 0.3);
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        transition: all 0.35s ease;
        position: relative;
        overflow: hidden;
        padding-top: 1rem;
    }

        .patient-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 16px 40px rgba(0,0,0,0.12);
        }

    /* Serial Badge */
    .serial-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        background: #20c997;
        color: #fff;
        padding: 0.5rem 0.9rem;
        font-weight: 600;
        border-radius: 10px;
        font-size: 0.85rem;
    }

    /* Card Titles & Text */
    .card-title {
        font-size: 1.45rem;
        font-weight: 700;
        color: #198754;
        margin-bottom: 0.6rem;
        font-family: 'Poppins', sans-serif;
    }

    .card-text {
        font-size: 1rem;
        color: #333;
        margin-bottom: 0.4rem;
    }

    /* Action Buttons */
    .btn-icon {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        font-weight: 600;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        text-decoration: none;
        text-align: center;
    }

    .btn-teal-green {
        background: #e6f4ef;
        color: #20c997;
    }

        .btn-teal-green:hover {
            background: linear-gradient(90deg, #20c997, #198754);
            color: #fff;
        }

    .btn-delete {
        background: #fdecea;
        color: #dc3545;
    }

        .btn-delete:hover {
            background: #dc3545;
            color: #fff;
        }

    /* Pager */
    .page-link {
        border-radius: 8px !important;
        margin: 0 4px;
        color: #20c997 !important;
        font-weight: 500;
        border: 1px solid #dee2e6 !important;
        transition: all 0.25s ease;
    }

        .page-link:hover {
            background: #e0f7ef;
            border-color: #20c997 !important;
        }

    .page-item.active .page-link {
        background: #20c997 !important;
        border-color: #20c997 !important;
        color: #fff !important;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .d-flex.justify-content-between

    {
        flex-direction: column;
        gap: 1rem;
    }

    }
</style>
