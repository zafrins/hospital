@using Hospitals.Utilities
@model PagedResult<Hospital.ViewModels.ContactViewModel>

@{
    ViewData["Title"] = "Contacts Dashboard";
}

<div class="container my-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h1 class="page-title mb-3 mb-md-0">Contacts Dashboard</h1>
        <a asp-action="Create" class="btn btn-gradient btn-lg shadow-btn">
            <i class="bi bi-plus-circle me-2"></i> Add New Contact
        </a>
    </div>

    <!-- Card Grid -->
    <div class="row g-4">
        @foreach (var item in Model.Data)
        {
            <div class="col-md-6 col-lg-4 d-flex">
                <div class="contact-card h-100 w-100 position-relative">

                    <!-- Serial badge -->
                    <span class="serial-badge position-absolute">@item.Id</span>

                    <div class="card-body text-center">
                        <h5 class="card-title">@item.Email</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Phone: @item.Phone</h6>
                        <p class="card-text mb-3"><strong>Hospital ID:</strong> @item.HospitalInfoId</p>

                        <!-- Action buttons -->
                        <div class="d-flex justify-content-center gap-2 flex-wrap mt-3">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-edit">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                                <i class="bi bi-info-circle me-1"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-delete">
                                <i class="bi bi-trash me-1"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

</div>

<style>
    /* Page title */
    .page-title {
        font-size: 2.2rem;
        font-weight: 700;
        color: #1f7a8c;
    }

    /* Add New Contact button */
    .btn-gradient {
        background: linear-gradient(135deg, #1f7a8c, #3fb0ac);
        color: #fff;
        border: none;
        border-radius: 2rem;
        padding: 0.7rem 1.8rem;
        font-weight: 600;
        font-size: 1rem;
        display: inline-flex;
        align-items: center;
        transition: all 0.3s ease;
    }

        .btn-gradient i {
            font-size: 1.1rem;
        }

        .btn-gradient:hover {
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 6px 15px rgba(31,122,140,0.3);
        }

    /* Contact card */
    .contact-card {
        background: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 1.25rem;
        width: 100%;
    }

        .contact-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 35px rgba(31,122,140,0.15);
        }

    /* Serial badge */
    .serial-badge {
        background: #3fb0ac;
        color: #fff;
        font-weight: 600;
        padding: 0.35rem 0.75rem;
        border-radius: 0.5rem;
        position: absolute;
        top: 0.5rem;
        left: 0.5rem;
    }

    /* Card content */
    .card-title {
        font-weight: 700;
        color: #1f7a8c;
        font-size: 1.15rem;
        margin-bottom: 0.25rem;
    }

    .card-subtitle {
        font-size: 0.95rem;
        color: #555;
        margin-bottom: 0.5rem;
    }

    .card-text {
        font-size: 0.9rem;
        color: #333;
        margin-bottom: 0.75rem;
    }

    /* Buttons */
    .btn-edit, .btn-info, .btn-delete {
        padding: 0.65rem 1.25rem;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 0.75rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Hover effects */
    .btn-edit {
        background: #e0f7f9;
        color: #1f7a8c;
    }

        .btn-edit:hover {
            background: linear-gradient(135deg, #3fb0ac, #1f7a8c);
            color: #fff;
        }

    .btn-info {
        background: #d1ecf1;
        color: #0c5460;
    }

        .btn-info:hover {
            background: linear-gradient(135deg, #17a2b8, #0c5460);
            color: #fff;
        }

    .btn-delete {
        background: #ffe5e5;
        color: #c62828;
    }

        .btn-delete:hover {
            background: linear-gradient(135deg, #ef5350, #c62828);
            color: #fff;
        }

    /* Flex container for buttons */
    .d-flex.gap-2.flex-wrap {
        gap: 0.75rem;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .contact-card

    {
        padding: 1rem;
    }

    .d-flex.gap-2.flex-wrap a.btn-edit,
    .d-flex.gap-2.flex-wrap a.btn-info,
    .d-flex.gap-2.flex-wrap a.btn-delete,
    .btn-gradient {
        width: 100%;
        justify-content: center;
    }

    }
</style>
