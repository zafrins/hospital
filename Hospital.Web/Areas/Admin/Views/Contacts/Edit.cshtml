@model Hospital.ViewModels.ContactViewModel

@{
    ViewData["Title"] = "Edit Contact";
}

<div class="container my-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-success fw-bold">Edit Contact</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-6 col-lg-5">
            <form asp-action="Edit" class="p-4 shadow-sm rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Id" class="form-label fw-bold"></label>
                    <input asp-for="Id" class="form-control border-success" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control border-success" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Phone" class="form-label fw-bold"></label>
                    <input asp-for="Phone" class="form-control border-success" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="HospitalInfoId" class="form-label fw-bold"></label>
                    <input asp-for="HospitalInfoId" class="form-control border-success" />
                    <span asp-validation-for="HospitalInfoId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <input type="submit" value="Save" class="btn btn-success btn-gradient" />
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>

</div>

<style>
    /* Gradient button */
    .btn-gradient {
        background: linear-gradient(45deg, #28a745, #198754);
        color: #fff;
        border: none;
        transition: all 0.2s;
    }

        .btn-gradient:hover {
            background: linear-gradient(45deg, #198754, #28a745);
            box-shadow: 0 4px 8px rgba(0,128,0,0.3);
        }

    /* Input focus effect */
    .form-control:focus {
        box-shadow: 0 0 5px rgba(40,167,69,0.5);
        border-color: #28a745;
    }

    .bg-light {
        background: #f9fef9;
    }

    .form-label {
        font-size: 0.95rem;
    }
</style>
