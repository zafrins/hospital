@model Hospital.ViewModels.HospitalInfoViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1 class="dashboard-title mb-4">Add New Hospital</h1>

            <div class="card shadow-sm border-success border-2 p-4 form-card">
                <form asp-action="Create" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control form-control-pill" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Type" class="form-label fw-semibold"></label>
                        <input asp-for="Type" class="form-control form-control-pill" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="City" class="form-label fw-semibold"></label>
                        <input asp-for="City" class="form-control form-control-pill" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PinCode" class="form-label fw-semibold"></label>
                        <input asp-for="PinCode" class="form-control form-control-pill" />
                        <span asp-validation-for="PinCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Country" class="form-label fw-semibold"></label>
                        <input asp-for="Country" class="form-control form-control-pill" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <input type="submit" value="Create" class="btn btn-gradient-green flex-fill me-2" />
                        <a asp-action="Index" class="btn btn-outline-secondary flex-fill">Back</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
<style>
    /* Form card with gradient and blur */
    .form-card {
        border-radius: 1rem;
        background: linear-gradient(180deg, rgba(255,255,255,0.95), rgba(245,250,252,0.85));
        backdrop-filter: blur(6px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        padding: 2rem;
    }

        .form-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(31, 122, 140, 0.15);
        }

    /* Dashboard-style title */
    .dashboard-title {
        font-weight: 700;
        font-size: 2.3rem;
        color: #1f7a8c;
        margin-bottom: 2rem;
    }

    /* Pill-shaped inputs with subtle glow */
    .form-control-pill {
        border-radius: 50px;
        padding: 0.55rem 1rem;
        box-shadow: inset 0 1px 3px rgba(0,0,0,0.05);
        transition: box-shadow 0.25s ease, transform 0.2s ease, border-color 0.2s ease;
    }

        .form-control-pill:focus {
            box-shadow: 0 0 8px rgba(31,122,140,0.4);
            border-color: #1f7a8c;
            transform: translateY(-1px);
        }

    /* Labels */
    .form-label {
        font-weight: 600;
        color: #333;
    }

    /* Gradient buttons consistent with dashboard */
    .btn-gradient-green {
        border: none;
        border-radius: 50px;
        font-weight: 600;
        background: linear-gradient(135deg, #1f7a8c, #3fb0ac);
        color: #fff;
        padding: 0.65rem 1.5rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-gradient-green:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 18px rgba(31,122,140,0.35);
        }

    /* Back button consistent with style */
    .btn-outline-secondary {
        border-radius: 50px;
        font-weight: 600;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

        .btn-outline-secondary:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }
</style>
