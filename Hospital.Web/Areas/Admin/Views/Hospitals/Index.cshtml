@using Hospitals.Utilities
@model PagedResult<Hospital.ViewModels.HospitalInfoViewModel>

@{
    ViewData["Title"] = "Hospitals Dashboard";
}

<div class="container my-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-success fw-bold">Hospitals Dashboard</h1>
        <a asp-action="Create" class="btn btn-success btn-lg shadow-sm">
            <i class="bi bi-plus-circle"></i> Add New Hospital
        </a>
    </div>

    <!-- Card Grid -->
    <div class="row g-4">
        @foreach (var item in Model.Data)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-success border-2 position-relative">

                    <!-- Serial number badge -->
                    <span class="position-absolute top-0 start-0 m-2 badge bg-success text-light fw-bold p-2 serial-badge">
                        @item.Id
                    </span>

                    <div class="card-body pt-5">
                        <!-- Increased top padding -->
                        <h5 class="card-title text-success fw-bold">@item.Name</h5>
                        <h6 class="card-subtitle mb-2 text-muted">@item.Type</h6>
                        <p class="card-text mb-1"><strong>City:</strong> @item.City</p>
                        <p class="card-text mb-1"><strong>PinCode:</strong> @item.PinCode</p>
                        <p class="card-text mb-3"><strong>Country:</strong> @item.Country</p>

                        <!-- Action buttons -->
                        <div class="d-flex justify-content-between mt-3 gap-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-custom btn-success flex-fill d-flex align-items-center justify-content-center">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-custom btn-info flex-fill d-flex align-items-center justify-content-center">
                                <i class="bi bi-info-circle me-1"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-custom btn-danger flex-fill d-flex align-items-center justify-content-center">
                                <i class="bi bi-trash me-1"></i> Delete
                            </a>
                        </div>

                        <style>
                            /* Outline style buttons */
                            .btn-outline-custom {
                                border-width: 2px;
                                border-style: solid;
                                background-color: transparent;
                                color: inherit;
                                transition: all 0.25s ease;
                                border-radius: 0.5rem; /* slightly rounded */
                                font-weight: 500;
                            }

                                /* Green Edit button */
                                .btn-outline-custom.btn-success {
                                    border-color: #28a745;
                                    color: #28a745;
                                }

                                    .btn-outline-custom.btn-success:hover {
                                        background-color: #28a745;
                                        color: #fff;
                                        transform: translateY(-1px);
                                        box-shadow: 0 4px 10px rgba(0, 128, 0, 0.2);
                                    }

                                /* Info Details button */
                                .btn-outline-custom.btn-info {
                                    border-color: #0dcaf0;
                                    color: #0dcaf0;
                                }

                                    .btn-outline-custom.btn-info:hover {
                                        background-color: #0dcaf0;
                                        color: #fff;
                                        transform: translateY(-1px);
                                        box-shadow: 0 4px 10px rgba(13, 202, 240, 0.2);
                                    }

                                /* Danger Delete button */
                                .btn-outline-custom.btn-danger {
                                    border-color: #dc3545;
                                    color: #dc3545;
                                }

                                    .btn-outline-custom.btn-danger:hover {
                                        background-color: #dc3545;
                                        color: #fff;
                                        transform: translateY(-1px);
                                        box-shadow: 0 4px 10px rgba(220, 53, 69, 0.2);
                                    }
                        </style>


                    </div>
                </div>
            </div>

        }
    </div>

    <!-- Pager -->
    <div class="mt-5 d-flex justify-content-center">
        <cs-pager cs-paging-pagesize="@Model.PageSize"
                  cs-paging-pagenumber="@Model.PageNumber"
                  cs-paging-totalitems="@Model.TotalItems"
                  cs-pagenumber-param="pageNumber"
                  asp-controller="Hospitals"
                  asp-action="Index"
                  cs-pager-li-current-class="page-item active"
                  cs-pager-li-other-class="page-item"
                  cs-pager-li-non-active-class="page-item disabled"
                  cs-pager-link-current-class="page-link"
                  cs-pager-link-other-class="page-link">
        </cs-pager>
    </div>
</div>
<style>
    /* Card hover effect */
    .card:hover {
        transform: translateY(-5px);
        transition: transform 0.25s ease, box-shadow 0.25s ease;
        box-shadow: 0 12px 20px rgba(0, 128, 0, 0.15);
    }

    /* Buttons styling */
    .btn-success, .btn-info, .btn-danger {
        border-radius: 50px; /* pill-shaped buttons */
        font-weight: 500;
        transition: transform 0.15s, box-shadow 0.2s;
    }

        .btn-success:hover, .btn-info:hover, .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

    /* Card border radius */
    .card {
        border-radius: 0.85rem;
    }

    /* Card title style */
    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
    }

    /* Card subtitle */
    .card-subtitle {
        font-size: 0.95rem;
    }

    /* Serial number badge */
    .serial-badge {
        font-size: 0.85rem;
        padding: 0.35rem 0.65rem;
        top: 0.6rem;
        left: 0.6rem;
        border-radius: 0.5rem;
        background-color: #28a745;
        color: #fff;
        font-weight: 600;
    }

    /* Header style */
    h1.text-success {
        font-weight: 700;
    }
</style>

