@model IEnumerable<Hospital.Models.Medicine>

@{
    ViewData["Title"] = "Pharmacy Store";
}

<h2>Pharmacy</h2>
<div class="row">
    @foreach (var med in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@med.ImageUrl" class="card-img-top" style="height:180px;object-fit:cover" alt="@med.Name" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@med.Name</h5>
                    <p class="card-text">@med.Description?.Substring(0, Math.Min(100, (med.Description ?? "").Length))</p>
                    <div class="mt-auto">
                        <strong>৳ @med.Cost</strong>
                        <form asp-action="AddToCart" method="post" class="d-inline-block float-end">
                            <input type="hidden" name="id" value="@med.Id" />
                            <input type="hidden" name="quantity" value="1" />
                            <button class="btn btn-sm btn-primary">Add to cart</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
