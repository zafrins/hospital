@model Hospital.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
}
else
{
    <table class="table">
        <thead><tr><th>Item</th><th>Price</th><th>Qty</th><th>Total</th></tr></thead>
        <tbody>
            @foreach (var it in Model.Items)
            {
                <tr>
                    <td>@it.MedicineName</td>
                    <td>@it.Price</td>
                    <td>@it.Quantity</td>
                    <td>@it.Total</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr><th colspan="3">Subtotal</th><th>@Model.Subtotal</th></tr>
            <tr><th colspan="3">Shipping</th><th>@Model.Shipping</th></tr>
            <tr><th colspan="3">Total</th><th>@Model.Total</th></tr>
        </tfoot>
    </table>

    <form asp-action="ConfirmOrder" method="post">
        <p>Payment: <strong>Cash on Delivery</strong></p>
        <button type="submit" class="btn btn-success">Confirm Order</button>
        <a asp-action="Cart" class="btn btn-secondary ms-2">Back to Cart</a>
    </form>
}
