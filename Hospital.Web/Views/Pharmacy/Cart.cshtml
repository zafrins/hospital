@model List<Hospital.ViewModels.CartItemViewModel>
@{
    ViewData["Title"] = "Cart";
}

<div class="cart-wrapper">

    <!-- Checkout Progress Steps -->
    <div class="checkout-steps">
        <div class="step active">Cart</div>
        <div class="step">Checkout</div>
        <div class="step">Confirmation</div>
    </div>

    <h2 class="cart-header">Your Cart</h2>

    @if (!Model.Any())
    {
        <div class="empty-cart">
            <p>Your cart is empty.</p>
            <a asp-action="Index" asp-controller="Pharmacy" class="btn-back">Back to store</a>
        </div>
    }
    else
    {
        <form asp-action="UpdateCart" method="post">
            <div class="cart-items">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="cart-card">
                        <div class="cart-item-left">
                            <img src="@Model[i].ImageUrl" alt="@Model[i].MedicineName" />
                            <div class="item-info">
                                <h4>@Model[i].MedicineName</h4>
                                <p>Price: <strong>@Model[i].Price.ToString("C")</strong></p>
                                <div class="quantity">
                                    <label>Qty:</label>
                                    <input type="hidden" name="items[@i].MedicineId" value="@Model[i].MedicineId" />
                                    <input type="hidden" name="items[@i].MedicineName" value="@Model[i].MedicineName" />
                                    <input type="number" name="items[@i].Quantity" value="@Model[i].Quantity" min="1" />
                                    <input type="hidden" name="items[@i].Price" value="@Model[i].Price" />
                                    <input type="hidden" name="items[@i].ImageUrl" value="@Model[i].ImageUrl" />
                                </div>
                                <p>Total: <strong>@Model[i].Total.ToString("C")</strong></p>
                            </div>
                        </div>
                        <div class="cart-item-right">
                            <form asp-action="RemoveFromCart" method="post">
                                <input type="hidden" name="medicineId" value="@Model[i].MedicineId" />
                                <button type="submit" class="btn-remove">Remove</button>
                            </form>
                        </div>
                    </div>
                }
            </div>

            <div class="cart-actions">
                <a asp-action="Index" asp-controller="Pharmacy" class="btn-back">Back</a>
                <button type="submit" class="btn-update">Update Cart</button>
                <a asp-action="Checkout" class="btn-checkout">Proceed to Checkout</a>
            </div>
        </form>
    }
</div>

<style>
    /* Wrapper */
    .cart-wrapper {
        max-width: 1000px;
        margin: 2rem auto;
        padding: 1rem;
        font-family: 'Poppins', sans-serif;
    }

    /* Progress Steps */
    .checkout-steps {
        display: flex;
        justify-content: space-between;
        margin-bottom: 2rem;
    }

        .checkout-steps .step {
            flex: 1;
            text-align: center;
            padding: 0.5rem 0;
            border-bottom: 3px solid #ccc;
            font-weight: 600;
            color: #888;
            position: relative;
        }

            .checkout-steps .step.active {
                border-bottom: 3px solid #0d4f5f;
                color: #0d4f5f;
            }

    .cart-header {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        color: #0d4f5f;
        margin-bottom: 2rem;
    }

    /* Empty cart */
    .empty-cart {
        text-align: center;
        padding: 3rem 1rem;
        background: #f8f9fa;
        border-radius: 16px;
    }

        .empty-cart p {
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

    /* Cart cards */
    .cart-items {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .cart-card {
        display: flex;
        justify-content: space-between;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0,0,0,0.08);
        padding: 1rem 1.5rem;
        transition: all 0.3s;
    }

        .cart-card:hover {
            box-shadow: 0 12px 30px rgba(0,0,0,0.12);
        }

    .cart-item-left {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

        .cart-item-left img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 12px;
            border: 1px solid #eee;
        }

    .item-info h4 {
        margin: 0 0 0.5rem 0;
        font-size: 1.25rem;
        color: #0d4f5f;
        font-weight: 600;
    }

    .item-info p {
        margin: 0.25rem 0;
        color: #555;
        font-weight: 500;
    }

    .quantity {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0.5rem 0;
    }

        .quantity input[type="number"] {
            width: 60px;
            padding: 0.3rem;
            border-radius: 8px;
            border: 1px solid #ccc;
            outline: none;
            transition: all 0.2s;
        }

            .quantity input[type="number"]:focus {
                border-color: #0d4f5f;
                box-shadow: 0 0 5px rgba(13,79,95,0.3);
            }

    .cart-item-right {
        display: flex;
        align-items: center;
    }

    .btn-remove {
        background: #dc3545;
        color: #fff;
        border: none;
        padding: 0.6rem 1rem;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
    }

        .btn-remove:hover {
            background: #c82333;
            transform: scale(1.05);
        }

    /* Bottom actions */
    .cart-actions {
        display: flex;
        justify-content: flex-end;
        gap: 1rem;
        margin-top: 2rem;
        flex-wrap: wrap;
    }

        .cart-actions .btn-back,
        .cart-actions .btn-update,
        .cart-actions .btn-checkout {
            padding: 0.8rem 1.5rem;
            border-radius: 12px;
            font-weight: 600;
            text-decoration: none;
            border: none;
            text-align: center;
            cursor: pointer;
            transition: all 0.3s;
        }

    .btn-back {
        background: #6c757d;
        color: #fff;
    }

        .btn-back:hover {
            background: #5a6268;
        }

    .btn-update {
        background: linear-gradient(90deg, #0d4f5f, #38a3a5);
        color: #fff;
    }

        .btn-update:hover {
            background: linear-gradient(90deg, #38a3a5, #0d4f5f);
        }

    .btn-checkout {
        background: linear-gradient(90deg, #28a745, #218838);
        color: #fff;
    }

        .btn-checkout:hover {
            background: linear-gradient(90deg, #218838, #28a745);
        }

    /* Responsive */
    @@media(max - width: 900px)

    {
        .cart-card

    {
        flex-direction: column;
        align-items: flex-start;
    }

    .cart-item-right {
        margin-top: 0.5rem;
        width: 100%;
        display: flex;
        justify-content: flex-end;
    }

    .cart-actions {
        flex-direction: column;
        width: 100%;
    }

        .cart-actions .btn-back,
        .cart-actions .btn-update,
        .cart-actions .btn-checkout {
            width: 100%;
        }

    }
</style>
