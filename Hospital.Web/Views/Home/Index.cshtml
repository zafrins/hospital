<!-- ===============================
     CSS Styling
================================ -->
<style>
    /* Carousel Styling */
    .landing-carousel-container {
        position: relative;
        width: 100%;
        max-height: 500px;
        overflow: hidden;
    }

    .carousel-img {
        width: 100%;
        height: 350px;
        object-fit: cover;
        transition: all 0.5s ease;
        filter: brightness(70%) contrast(90%);
    }

    .carousel-inner::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.5));
        z-index: 1;
    }

    .carousel-text-overlay {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        text-align: center;
        color: #fff;
        text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
        z-index: 10;
    }

        .carousel-text-overlay h1 {
            font-size: 3rem;
            font-weight: 700;
        }

        .carousel-text-overlay p {
            font-size: 1.25rem;
            margin-top: 0.5rem;
        }

    .btn-hero {
        padding: 0.75rem 2rem;
        font-size: 1.1rem;
        font-weight: 700;
        border-radius: 2rem;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 6px 12px rgba(0,0,0,0.2);
    }

    .btn-doctors {
        background: linear-gradient(135deg, #1f7a8c, #3fb0ac);
        color: #fff;
    }

        .btn-doctors:hover {
            background: linear-gradient(135deg, #3fb0ac, #1f7a8c);
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 10px 20px rgba(31,122,140,0.35);
        }

    .btn-hospitals {
        background: linear-gradient(135deg, #f6d365, #fda085);
        color: #fff;
    }

        .btn-hospitals:hover {
            background: linear-gradient(135deg, #fda085, #f6d365);
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 10px 20px rgba(253,160,133,0.35);
        }

    /* Best Doctor Section */
    .best-doctors {
        background: #e0f7fa; /* light teal background */
    }

        .best-doctors h2 {
            font-size: 2rem;
            font-weight: 700;
            color: #00796b;
        }

        .best-doctors p {
            font-size: 1rem;
            color: #004d40;
        }

    .doctor-card img {
        height: 200px;
        object-fit: cover;
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
    }

    .doctor-card .card-body h5 {
        font-weight: 600;
    }

    .doctor-card .btn-doctors {
        font-size: 0.9rem;
        padding: 0.4rem 1rem;
        border-radius: 2rem;
    }

    /* Medicines Section Styling */
    .medicines .medicine-card img {
        height: 150px;
        object-fit: cover;
        border-top-left-radius: 0.5rem;
        border-top-right-radius: 0.5rem;
    }

    .medicines .card-body h6 {
        font-weight: 600;
        font-size: 0.95rem;
    }

    .medicines .btn-doctors {
        font-size: 0.85rem;
        padding: 0.35rem 0.8rem;
        border-radius: 2rem;
    }

</style>
