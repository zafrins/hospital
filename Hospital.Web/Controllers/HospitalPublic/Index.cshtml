@model IEnumerable<Hospital.ViewModels.HospitalInfoViewModel>

<h2>Hospitals</h2>

@if (!Model.Any())
{
    <p>No hospitals available.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>City</th>
                <th>Pin Code</th>
                <th>Country</th>
                <th>Actions</th> <!-- Added column header for actions -->
            </tr>
        </thead>
        <tbody>
            @foreach (var hospital in Model)
            {
                <tr>
                    <td>@hospital.Name</td>
                    <td>@hospital.Type</td>
                    <td>@hospital.City</td>
                    <td>@hospital.PinCode</td>
                    <td>@hospital.Country</td>
                    <td>
                        <!-- "View" button -->
                        <a asp-area="Patient"
                           asp-controller="Hospital"
                           asp-action="Details"
                           asp-route-id="@hospital.Id"
                           class="btn btn-sm btn-primary">
                            View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
